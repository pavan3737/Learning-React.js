// Importing the React library to enable JSX and component creation
import React from 'react';

// Defining a functional component named App
const App = () => {
  return (
    // Returning a JSX element (UI structure) to be rendered
    <div>
      {/* Rendering an <h1> element with inline styles */}
      <h1 style={{ color: 'blue', fontSize: '24px' }}>
        Hello, React!
      </h1>
    </div>
  );
};

// Exporting the App component so it can be used in other files
export default App;
